<UserControl x:Class="LockTextScreen.largeTileTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="336" d:DesignWidth="691">
    
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MaxHeight="200"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="tbLockContent" Text="锁屏记事显示内容动态生成的图片显示你知道吗根据文本的多少锁屏记事显示内容动态生成的图片显示你知道吗根据文本的多少" TextWrapping="Wrap"
                 FontSize="28" VerticalAlignment="Top" Margin="12,5,12,0" FontFamily="Segoe WP Black"/>
        <TextBlock x:Name="tbDate" Grid.Row="1" Margin="12,0,0,8"  Text="日期：未设日期" FontSize="24"  VerticalAlignment="Center" FontFamily="Segoe WP Black"/>
    </Grid>
</UserControl>